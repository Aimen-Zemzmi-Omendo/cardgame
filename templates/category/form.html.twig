{% extends 'base.html.twig' %}
{% block body %}
    <style>
        body {
            margin : 0;
        }

        h1{
            line-height: 25vh;
            text-align: center;
        }

        .container{
            width: 75%;
        }
    </style>

    <h1>Create Category</h1>

    <div class = "container">
        {{ form_start(form, {'action': path(app.request.attributes.get('_route')), 'method': 'POST'}) }}
        <label class = "col-form-label col-md-11" style ="display: inline-block;"> {{ form_row(form.name) }} </label><br>
        {{ form_end(form) }}
    </div>
{% endblock %}