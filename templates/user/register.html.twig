{% extends 'base.html.twig' %}
{% block body %}
    <nav class="navbar navbar-expand-lg ">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/login">Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/user-register">Register</a>
                </li>
            </ul>
        </div>
    </nav>
    <br>
    {{ form_start(form) }}
    <div style = "display: block; margin: auto;">
        <label class = "col-form-label col-md-11"style ="display: inline-block;"> {{ form_row(form.name) }} </label><br>
        <label class = "col-form-label col-md-11"style ="display: inline-block;"> {{ form_row(form.email) }} </label><br>
        <label class = "col-form-label col-md-11"style ="display: inline-block;"> {{ form_row(form.plainPassword.first) }} </label><br>
        <label class = "col-form-label col-md-11"style ="display: inline-block;"> {{ form_row(form.plainPassword.second) }} </label><br>
        <button style = "display: block; margin: auto;" type = "submit" class = "btn btn-success">Register</button>
    </div>
    {{ form_end(form) }}
{% endblock %}